<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Move Search Result</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <h1>Results Page!!!</h1>
        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                  <% posts.forEach((post) => { %>
                    <h4 class="list-group-item-heading"><%= post.title %></h4>
                    <img src="<%= post.poster_path %>" />
                  <% }) %>
                </div>
            </div>
        </div>        
        <%- include('partials/footer') %>
    </div>
</body>

</html>
